{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- Bootstrap Colorpicker -->
    <link href="{{ asset('bundles/app/vendors/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css')}}"   rel="stylesheet">
{% endblock %}
{% block title %} Tratamiento {% endblock %}
{% block Subtitulo %} Editar Datos de un Tratamiento -  <small> <a href="{{ path('tratamiento_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}        
        <div class="alert alert-success alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
            </button>
            <strong>{{ msg }}</strong>
        </div>
    {% endfor %}

    {% for msgs in app.session.flashBag.get('error') %}
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <strong>
                {% for msg in msgs %}
                    <p>{{ msg }}</p>
                {% endfor %}
            </strong>
        </div>
    {% endfor %}
    <div class="x_content">
        <br />        

        {{ form_start(edit_form, { 'attr': {'id':'tratamiento','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(edit_form) }}
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">{{ form_label(edit_form.nombre) }} <span class="required">*</span></label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                {{ form_errors(edit_form.nombre) }}                
                {{form_widget(edit_form.nombre,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Color <span class="required">*</span> </label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                <div class="input-group color">
                    {{ form_errors(edit_form.color) }}                
                    {{form_widget(edit_form.color,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}   
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="cavidad">{{ form_label(edit_form.cavidad) }} <span class="required">*</span></label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                {{ form_errors(edit_form.cavidad) }}                
                {{form_widget(edit_form.cavidad) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="diente-completo">{{ form_label(edit_form.todo) }} <span class="required">*</span></label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                {{ form_errors(edit_form.todo) }}                
                {{form_widget(edit_form.todo ) }}                
            </div>
        </div>

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-3">                
                <button type="submit" class="btn btn-success">Registrar</button>
            </div>
        </div>

        {{ form_end(edit_form) }}                           
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap Colorpicker -->
    <script src="{{ asset('bundles/app/vendors/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js')}}"></script>    

    <!-- Bootstrap Colorpicker -->
    <script>
        $(document).ready(function () {            
            $('.color').colorpicker();                
        });
    </script>
    <!-- /Bootstrap Colorpicker -->

{% endblock %}