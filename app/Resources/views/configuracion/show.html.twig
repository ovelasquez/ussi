{% extends 'base.html.twig' %}
{% block Subtitulo %} Ver Configuración -  <small> <a href="{{ path('configuracion_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success"> {{ msg }} </div>       
    {% endfor %}

    {% for msgs in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            {% for msg in msgs %}
                <p>{{ msg }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    <!-- page content -->
    <div class="x_content">
        <br />

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Número de Consultas Permitidas</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                            
                {{ configuracion.numeroConsultas }}              
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Servicios Actualizados al</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                            
                {% if configuracion.servicioActualizado %}{{ configuracion.servicioActualizado|date('Y-m-d') }}{% endif %}            
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Tiempo Espera</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                            
                {{ configuracion.tiempoEspera }}        
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Penalización</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                            
                {{ configuracion.penalizacion}}        
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Campaña</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                            
                {{ configuracion.campania.nombre}}        
            </div>
        </div>
        <br />
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                    <a class="btn btn-success" href="{{ path('configuracion_edit', { 'id': configuracion.id }) }}"><i class="fa fa-edit m-right-xs"></i>Editar Registro</a>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                                    
                    {{ form_start(delete_form, { 'attr': {'id':'eliminar','class': 'form-horizontal form-label-left'} }) }} 
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar </button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>

    </div>



{% endblock %}


