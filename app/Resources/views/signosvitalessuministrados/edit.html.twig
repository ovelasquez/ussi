{% extends 'base.html.twig' %}
{% block title %} Signos Vitales {% endblock %}
{% block Subtitulo %} Registrar Signos Vitales -  <small> <a href="{{ path('homepage_enfermeria', { 'paciente': signosVitalesSuministrado.consulta.paciente.id }) }}">Regresar a la Consulta</a></small> {% endblock %} 
{% block body %}

    <div class="x_content">
        <br />       
        {{ form_start(edit_form, { 'attr': {'id':'signosvitales','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(edit_form) }}

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="consulta">{{ form_label(edit_form.consulta) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.consulta) }}                
                {{form_widget(edit_form.consulta,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">{{ form_label(edit_form.nombre) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.nombre) }}                
                {{form_widget(edit_form.nombre,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="valor">{{ form_label(edit_form.valor) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.valor) }}                
                {{form_widget(edit_form.valor,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="usuario">{{ form_label(edit_form.usuario) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.usuario) }}                
                {{form_widget(edit_form.usuario,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fecha">{{ form_label(edit_form.fecha) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.fecha) }}                
                {{form_widget(edit_form.fecha ) }}                
            </div>
        </div>


        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                 
                <button type="submit" onClick="removeReadonly()" class="btn btn-success">Registrar</button>
            </div>
        </div>

        {{ form_end(edit_form) }}                           

        {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar </button>
        {{ form_end(delete_form) }}


    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#appbundle_signosvitalessuministrados_usuario').prop('disabled', true);
            $('#appbundle_signosvitalessuministrados_consulta').prop('disabled', true);
            $('#appbundle_signosvitalessuministrados_fecha_date_day').prop('disabled', true);
            $('#appbundle_signosvitalessuministrados_fecha_date_month').prop('disabled', true);
            $('#appbundle_signosvitalessuministrados_fecha_date_year').prop('disabled', true);
            $('#appbundle_signosvitalessuministrados_fecha_time_hour').prop('disabled', true);
            $('#appbundle_signosvitalessuministrados_fecha_time_minute').prop('disabled', true);

        });
    </script>
    <script>
        function removeReadonly() {
            $('#appbundle_signosvitalessuministrados_usuario').prop('disabled', false);
            $('#appbundle_signosvitalessuministrados_consulta').prop('disabled', false);
            $('#appbundle_signosvitalessuministrados_fecha_date_day').prop('disabled', false);
            $('#appbundle_signosvitalessuministrados_fecha_date_month').prop('disabled', false);
            $('#appbundle_signosvitalessuministrados_fecha_date_year').prop('disabled', false);
            $('#appbundle_signosvitalessuministrados_fecha_time_hour').prop('disabled', false);
            $('#appbundle_signosvitalessuministrados_fecha_time_minute').prop('disabled', false);
            return false;
        }
    </script>
    <!-- /Familiar -->


{% endblock %}
