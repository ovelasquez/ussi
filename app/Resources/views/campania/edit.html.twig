{% extends 'base.html.twig' %}
{% block title %} Campaña {% endblock %}
{% block Subtitulo %} Editar Datos de la Campaña -  <small> <a href="{{ path('campania_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}
    <div class="x_content">
        <br />
        {% form_theme edit_form 'AppBundle::jquery.collection.html.twig' %}
        {{ form_start(edit_form, { 'attr': {'id':'campania','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(edit_form) }}
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">{{ form_label(edit_form.nombre) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.nombre) }}                
                {{form_widget(edit_form.nombre,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="imagen">{{ form_label(edit_form.imagen) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">                
                {{ form_errors(edit_form.imagen) }}                
                {{form_widget(edit_form.imagen ) }}                
            </div>
        </div>

        

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                <button type="submit" class="btn btn-success">Registrar</button>
            </div>
        </div>

        {{ form_end(edit_form) }}                           
    </div>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('bundles/app/vendors/ninsuo/js/jquery.collection.js') }}"></script>
    <!-- Imagenes de la Campaña -->
    <script type="text/javascript">
        
        $('.imagenes').collection({
            drag_drop: true,
            drag_drop_options: {
                placeholder: 'ui-state-highlight'
            }
        });
    </script>


{% endblock %}