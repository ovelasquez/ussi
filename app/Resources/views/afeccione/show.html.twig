{% extends 'base.html.twig' %}
{% block Subtitulo %} Ver Afecciones-  <small> <a href="{{ path('afeccione_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success"> {{ msg }} </div>       
    {% endfor %}

    {% for msgs in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            {% for msg in msgs %}
                <p>{{ msg }}</p>
            {% endfor %}
        </div>
    {% endfor %}


    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ afeccione.id }}</td>
            </tr>
            
            <tr>
                <th>Diagnostico</th>
                <td>{{ afeccione.diagnostico }}</td>
            </tr>
            <tr>
                <th>Tratamiento</th>
                <td>{{ afeccione.tratamiento }}</td>
            </tr>
         
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('afeccione_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('afeccione_edit', { 'id': afeccione.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
