{% extends 'base.html.twig' %}
{% block title %} Medicamento {% endblock %}
{% block Subtitulo %} Registrar Medicamento -  <small> <a href="{{ path('medicamento_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success"> {{ msg }} </div>       
    {% endfor %}

    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-danger"> <p>{{ msg }}</p> </div>
    {% endfor %}
    <div class="x_content">
        <br />
        {% form_theme form 'AppBundle::jquery.collection.html.twig' %}

        {{ form_start(form, { 'attr': {'id':'medicamento','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(form) }}
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="principioActivo">{{ form_label(form.principioActivo) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.principioActivo) }}                
                {{form_widget(form.principioActivo,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>
       

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="stock">{{ form_label(form.stock) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.stock) }}                
                {{form_widget(form.stock,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="disponible">{{ form_label(form.disponible) }}</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.disponible) }}                
                {{form_widget(form.disponible,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tipoMedicamento">{{ form_label(form.tipoMedicamento) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.tipoMedicamento) }}                
                {{form_widget(form.tipoMedicamento,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                <button type="submit" class="btn btn-success">Registrar</button>
            </div>
        </div>

        {{ form_end(form) }}                           
    </div>
{% endblock %}