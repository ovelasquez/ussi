                <td>
                    <ul>
                        <li>
                            <a href="{{ path('especialidad_show', { 'id': especialidad.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('especialidad_edit', { 'id': especialidad.id }) }}">edit</a>
                        </li>
                    </ul>
