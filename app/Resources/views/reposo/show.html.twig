{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reposo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reposo.id }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ reposo.observacion }}</td>
            </tr>
            <tr>
                <th>Inicio</th>
                <td>{{ reposo.inicio }}</td>
            </tr>
            
            <tr>
                <th>Codigo</th>
                <td>{{ reposo.codigo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reposo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reposo_edit', { 'id': reposo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
