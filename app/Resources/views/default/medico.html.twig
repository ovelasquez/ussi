{% extends 'dashboard.html.twig' %}
{% block stylesheets %}
    <!-- Datatables -->
    <link href="{{ asset('bundles/app/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{ asset('bundles/app/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{ asset('bundles/app/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css')}}" rel="stylesheet">
    <!-- animate -->
    <link href="{{ asset('bundles/app/vendors/animate.css/animate.min.css')}}"   rel="stylesheet">
    <!-- PNotify -->
    <link href="{{ asset('bundles/app/vendors/pnotify/dist/pnotify.css')}}" rel="stylesheet">
    <link href="{{ asset('bundles/app/vendors/pnotify/dist/pnotify.buttons.css')}}" rel="stylesheet">
    <link href="{{ asset('bundles/app/vendors/pnotify/dist/pnotify.nonblock.css')}}" rel="stylesheet">
{% endblock %}
{% block title %} Médico{% endblock %}
{% block topTiles %}
    <div class="row tile_count">
        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Pacientes</span>
            <div class="count">{{esperandos| length}}</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i> </i> Lista de espera</span>
        </div>

        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-plus-square"></i> Pacientes Atendidos</span>
            <div class="count">{{atendidos| length}}</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i> </i> En el día de hoy</span>            
        </div>

        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-sign-out"></i> Pacientes Abandono</span>
            <div class="count red">{{abandono| length}}</div>
            <span class="count_bottom"><i class="red"><i class="fa fa-sort-asc"></i> </i> En el día de hoy</span>  

        </div>

        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Pacientes</span>
            <div class="count green">{{conCita| length}}</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i> Con Citas</span>
        </div>

        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-clock-o"></i> Fecha Consulta</span>
            <div class="count"></div>
            <h2>  {{ "now"|date("d/m/Y") }} </h2>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>Día </i> de la Consulta</span>
        </div>
    </div>
{% endblock %}
