{% extends 'base.html.twig' %}
{% block title %} Evolución {% endblock %}
{% block Subtitulo %} Registrar Evolución de Paciente -  <small> <a href="{{ path('evolucion_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success"> {{ msg }} </div>       
    {% endfor %}

    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-danger"> <p>{{ msg }}</p> </div>
    {% endfor %}
    <div class="x_content">
        <br />       
        {{ form_start(form, { 'attr': {'id':'evolucion','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(form) }}

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="pacinte"><label for="paciente">Consulta</label> <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">               
                <input id="consulta" name="consulta" class="form-control col-md-7 col-xs-12" value="{{consulta}}" type="number">                
            </div>
        </div>
            
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="edad">{{ form_label(form.edad) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.edad) }}                
                {{form_widget(form.edad,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="subjetivo">{{ form_label(form.subjetivo) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.subjetivo) }}                
                {{form_widget(form.subjetivo,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="objetivo">{{ form_label(form.objetivo) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.objetivo) }}                
                {{form_widget(form.objetivo,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="apreciacion">{{ form_label(form.apreciacion) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.apreciacion) }}                
                {{form_widget(form.apreciacion,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="frecuencia">{{ form_label(form.frecuencia) }}</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.frecuencia) }}                
                {{form_widget(form.frecuencia,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tratamiento">{{ form_label(form.tratamiento) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.tratamiento) }}                
                {{form_widget(form.tratamiento,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>



        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                <button type="submit" class="btn btn-success">Registrar</button>
            </div>
        </div>

        

        {{ form_end(form) }}                           
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#appbundle_evolucion_edad').val({{pacienteEdad}})
        });
    </script>
{% endblock %}

