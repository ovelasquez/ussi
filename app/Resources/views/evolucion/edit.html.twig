{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#appbundle_evolucion_consulta').prop('disabled', true);
            $('#appbundle_evolucion_edad').prop('disabled', true);

        });
    </script>
    <script>
        function removeReadonly() {
            $('#appbundle_evolucion_consulta').prop('disabled', false);
            $('#appbundle_evolucion_edad').prop('disabled', false);
            return false;
        }
