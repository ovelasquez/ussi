{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- Custom Theme Style -->
    <link href="{{ asset('bundles/app/vendors/bootstrap-daterangepicker/daterangepicker.css')}}"   rel="stylesheet">
{% endblock %}
{% block title %} Recetas {% endblock %}
{% block Subtitulo %} Registrar Receta  -  <small> <a href="{{ path('receta_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}

    <div class="x_content">
        <br />       
        {{ form_start(form, { 'attr': {'id':'reposo','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(form) }}

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="consulta">{{ form_label(form.consulta) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.consulta) }}                
                {{form_widget(form.consulta,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="observacion">{{ form_label(form.observacion) }}  <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(form.observacion) }}                
                {{form_widget(form.observacion,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>           
          

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                <button type="submit" class="btn btn-success">Registrar</button>
            </div>
        </div>

        {{ form_end(form) }}                           
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Vendor JS -->
    <script src="{{ asset('bundles/app/vendors/moment/min/moment.min.js')}}" ></script>
    <script src="{{ asset('bundles/app/vendors/bootstrap-daterangepicker/daterangepicker.js')}}" ></script>



    <script>
        $('#appbundle_receta_inicio').daterangepicker({
            locale: {
                format: 'DD-MM-YYYY'
            }
        }, );


    </script>

{% endblock %}