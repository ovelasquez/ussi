{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- Custom Theme Style -->
    <link href="{{ asset('bundles/app/vendors/bootstrap-daterangepicker/daterangepicker.css')}}"   rel="stylesheet">
{% endblock %}
{% block title %} Recetas {% endblock %}
{% block Subtitulo %} Registrar Receta  -  <small> <a href="{{ path('receta_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block body %}

    <div class="x_content">
        <br />       
        {{ form_start(edit_form, { 'attr': {'id':'reposo','class': 'form-horizontal form-label-left'} }) }} 
        {{ form_errors(edit_form) }}

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="consulta">{{ form_label(edit_form.consulta) }} <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.consulta) }}                
                {{form_widget(edit_form.consulta,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="observacion">{{ form_label(edit_form.observacion) }}  <span class="required">*</span></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_errors(edit_form.observacion) }}                
                {{form_widget(edit_form.observacion,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
            </div>
        </div>           


        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                <button type="submit" onClick="removeReadonly()" class="btn btn-success">Registrar</button>
            </div>
        </div>

        {{ form_end(edit_form) }}                           
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#appbundle_receta_consulta').prop('disabled', true);
        });
    </script>     
    <script>
        function removeReadonly() {
            $('#appbundle_receta_consulta').prop('disabled', false);
            return false;
        }
    </script>
{% endblock %}